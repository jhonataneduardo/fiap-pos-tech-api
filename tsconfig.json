{
    "compilerOptions": {
        "target": "ES2020", // Ou mais recente
        "module": "commonjs",
        "rootDir": "./src",
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "experimentalDecorators": true, // Para DI com decorators, se usar
        "emitDecoratorMetadata": true, // Para DI com decorators, se usar
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@core/*": [
                "src/core/*"
            ],
            "@modules/*": [
                "src/modules/*"
            ],
            "@config/*": [
                "src/config/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}