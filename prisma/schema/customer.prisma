enum CustomerStatus {
    ACTIVE
    INACTIVE
}

model Customer {
    id          String         @id @db.Uuid
    name        String
    email       String         @unique
    national_id String         @unique
    createdAt   DateTime       @default(now()) @map("created_at")
    updatedAt   DateTime       @updatedAt @map("updated_at")
    status      CustomerStatus @default(ACTIVE)

    sales Sale[]

    @@map("customers")
}
